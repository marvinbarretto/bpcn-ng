{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "bpcn-ng": {
      "projectType": "application",

      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "outputPath": "dist/bpcn-ng",
            "index": "src/index.html",
            "browser": "src/main.ts",
            "polyfills": ["zone.js"],
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "public"
              }
            ],
            "styles": ["src/styles.scss"],
            "stylePreprocessorOptions": {
              "includePaths": ["src"]
            },
            "scripts": [],
            "server": "src/main.server.ts",
            "ssr": {
              "entry": "src/server.ts"
            }
          },
          "configurations": {
            "production": {
              "outputHashing": "all",
              "sourceMap": {
                "scripts": true,
                "styles": true,
                "vendor": true
              },
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kb",
                  "maximumError": "1mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4mb",
                  "maximumError": "8mb"
                }
              ]
            },
            "development": {
              "optimization": false,
              "sourceMap": true,
              "extractLicenses": false
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "options": {
            "proxyConfig": "proxy.conf.json"
          },
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "bpcn-ng:build:production"
            },
            "development": {
              "buildTarget": "bpcn-ng:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "serve-ssr": {
          "builder": "@angular-devkit/build-angular:ssr-dev-server",
          "options": {
            "browserTarget": "bpcn-ng:build:development",
            "serverTarget": "bpcn-ng:server:development"
          },
          "configurations": {
            "development": {
              "browserTarget": "bpcn-ng:build:development",
              "serverTarget": "bpcn-ng:server:development"
            },
            "production": {
              "browserTarget": "bpcn-ng:build:production",
              "serverTarget": "bpcn-ng:server:production"
            }
          },
          "defaultConfiguration": "development"
        },
        "server": {
          "builder": "@angular-devkit/build-angular:server",
          "options": {
            "outputPath": "dist/bpcn-ng/server",
            "main": "src/main.server.ts",
            "tsConfig": "tsconfig.server.json"
          },
          "configurations": {
            "development": {
              "outputPath": "dist/bpcn-ng/server",
              "main": "src/main.server.ts",
              "tsConfig": "tsconfig.server.json"
            },
            "production": {
              "outputPath": "dist/bpcn-ng/server",
              "main": "src/main.server.ts",
              "tsConfig": "tsconfig.server.json"
            }
          },
          "defaultConfiguration": "development"
        }
      }

    }
  },
  "cli": {
    "analytics": false
  }
}
